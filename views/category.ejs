  <script>

    function updateUpvote( pdfId ) {
      
      $.post('/dashboard/like/' + pdfId,
        {
          pdfId: pdfId,
        },
        (res, status) => {
          $(`#${pdfId}`).find('span:nth-child(3)').text(res.upvoteCount);
          if(res.upvoteStatus) {
            $(`#${pdfId}`).addClass("status")
          }
          else {
            $(`#${pdfId}`).removeClass("status")
          }
        });
    }

  </script>
